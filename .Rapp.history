  beta_tilde_k <- c(beta_tilde_xk, sum(beta_tilde_xk * theta_hat) + r_tilde_k)#
  ell_k <- -0.5 * t(beta_hat_k - beta_tilde_k) %*% Sigma_inv_hat_k %*% (beta_hat_k - beta_tilde_k)#
  return(ell_k)#
}#

get_gamma_mvmr <- function(m, p, weight=0.5, K=0){#
  gamma_shared <- runif(m, 0.0, 0.2)#
  gamma <- matrix(NA, m, p)#
  for (j in 1:p) {#
    gamma_specific <- runif(m, 0.2, 0.4)#
    gamma[, j] <- weight * gamma_shared + (1 - weight) * gamma_specific#
  }#

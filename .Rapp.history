get_W <- function(Sigma_inv_hat) {#
  dims <- dim(Sigma_inv_hat)#
  m <- dims[3]#
  p <- dims[1]#
  W_mat <- matrix(NA, nrow = m, ncol = p)#
  W_vec <- numeric(m)#
#
  for (k in 1:m) {#
    W_mat[k, ] <- Sigma_inv_hat[p,,k]         # last row#
    W_vec[k] <- Sigma_inv_hat[p,p,k]          # bottom-right element#

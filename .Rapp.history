  p <- ncol(beta_hat_x)#
  bic <- numeric(p)#
  theta_tilde <- numeric(p)#
  beta_tilde_x <- matrix(NA, m, p)#
  for(j in 1:p) { #
    res_uvmr <- get_uvmr(beta_hat_x[,j], beta_hat_y, sigma_hat_x[,j], sigma_hat_y, max_iter)#
    theta_tilde[j] <- res_uvmr$theta_tilde#

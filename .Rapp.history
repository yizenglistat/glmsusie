compute_pip_bic <- function(X, Y) {#
  p <- ncol(X)#
  n <- nrow(X)#
  BICs <- numeric(p)#
#
  for (j in 1:p) {#
    fit <- lm(Y ~ X[, j])#
    BICs[j] <- BIC(fit)#
  }#
#
  # Compute Bayes Factors#
  min_BIC <- min(BICs)#
  BF <- exp(-0.5 * (BICs - min_BIC))#
  PIP <- BF / sum(BF)#
  return(PIP)#
}
compute_pip_bic(X,Y)
